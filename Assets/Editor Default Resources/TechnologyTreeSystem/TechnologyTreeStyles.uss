TextField
{
	padding: var(--techtree-metrics-window-pixels-4);
}

Button
{
	background-color: var(--techtree-colors-window-dark-grey-5);
	border-color: var(--techtree-colors-window-dark-grey-1);
	margin: var(--techtree-metrics-window-pixels-4);
	max-height: var(--techtree-metrics-window-pixels-25);
}

Button:hover
{
	background-color: var(--techtree-colors-window-dark-grey-2);
}


Button:active
{
	background-color: var(--techtree-colors-window-dark-grey-3);
	color: var(--techtree-colors-window-yellow);
}

/* BUILT-IN */
.unity-text-field__label
{
	padding: var(--techtree-metrics-window-pixels-4);
}

TextField:focus > .unity-text-field__label
{
	color: var(--techtree-colors-window-yellow);
}

.unity-text-field__input
{
	background-color: var(--techtree-colors-window-dark-grey-1);
	border-color: var(--techtree-colors-window-dark-grey-6);
	border-radius: var(--techtree-metrics-window-pixels-4);
	max-height: var(--techtree-metrics-window-pixels-25);
	min-width: var(--techtree-metrics-window-pixels-120);
	padding-left: var(--techtree-metrics-window-pixels-6);
}

.unity-text-field__input:focus
{
	color: var(--techtree-colors-window-yellow);
}

.techtree__main-element-container
{
	flex-direction: row;
	flex-wrap: nowrap;
	align-items: stretch;
}

.techtree__graph-element-container
{
	/*display: flex;*/
	flex-grow: 1;
	/*max-width: 80%;
	min-height: 100%;*/
}

.techtree__sidebar-element-container
{
	min-width: 20%;
	min-height: 100%;
	flex-direction: column;
}